@page "/logout"
@inject IAuthService AuthService
@inject NavigationManager NavigationManager

@code { 
    protected override async Task OnInitializedAsync()
    {      
        var result = await AuthService.LocalLogout();
        NavigationManager.NavigateTo("/");
        if (result.Successful && !result.IsDebug)
        {
            NavigationManager.NavigateTo("/obonator");
        }
        else if (result.Successful && result.IsDebug)
        {
            NavigationManager.NavigateTo("/");
        }
    }
}
