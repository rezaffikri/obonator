@code{
    int passwordLength { get; set; } = 6;
    bool includeLowercase { get; set; } = true;
    bool includeUppercase { get; set; } = true;
    bool includeNumeric { get; set; } = true;
    bool includeSpecial { get; set; } = true;
    bool includeAmbigous { get; set; }
    bool includeSpaces { get; set; }
    int rdVersion { get; set; } = 1;
    string outputData { get; set; }
    public bool IsVer2 { get; set; }

    void CheckIsVer1(int value)
    {
        if (value == 1)
        {

            IsVer2 = false;
        }
        else
        {
            IsVer2 = true;
        }
    }

    public void Generate()
    {
        ObonEmail.SetEmailParam("123", "dini@arranetwork.com", "Test");
        ObonEmail.SetEmailSettingsDefault();
        ObonEmail.SendEmail();
        CheckIsVer1(rdVersion);
        try
        {
            if (passwordLength < 6 && passwordLength > 2048)
            {
                _Toast.ShowInfo("Panjang password minimal 6 dan maksimal 2048");
            }
            if (includeLowercase || includeUppercase || includeNumeric || includeSpecial || includeAmbigous || includeSpaces)
            {
                if (IsVer2)
                {
                    outputData = ObonPassword.Generator.GenerateRandomPasswordVer2(passwordLength,
                        includeLowercase, includeUppercase, includeNumeric,
                        includeSpecial, includeAmbigous, includeSpaces);
                }
                else
                {

                    outputData = ObonPassword.Generator.GenerateRandomPasswordVer1(passwordLength,
                        includeLowercase, includeUppercase, includeNumeric,
                        includeSpecial, includeAmbigous, includeSpaces);
                }
            }
            else
            {
                _Toast.ShowInfo("Pilih satu atau lebih kriteria password");
            }

        }
        catch (Exception ex)
        {
            _ = ex.ToString();
            outputData = "";
            _Toast.ShowError("Gagal");
        }
    }

    private void Validation()
    {
        if (passwordLength < 6)
        {
            _Toast.ShowWarning("Gagal");
        }
    }
